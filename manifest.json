{
  "manifest_version": 3,
  "name": "SEC Digital Calendar and Lectionary",
  "version": "2.0.0",
  "description": "Display the Scottish Episcopal Church digital calendar and lectionary in a toolbar popup window.",
  "author": "Gareth J M Saunders",
  "homepage_url": "https://www.seccalendar.org.uk/extension/",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_title": "SEC Digital Calendar and Lectionary",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "64": "icons/64.png",
      "128": "icons/128.png"
    }
  },
  "host_permissions": [
    "https://www.seccalendar.org.uk/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src https://www.seccalendar.org.uk/;"
  }
}